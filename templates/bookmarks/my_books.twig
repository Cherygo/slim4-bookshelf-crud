{% extends('layouts/layout.twig') %}

{% block content %}

    <div class="row cat-text mt-5 mb-4 justify-content-center">

    <h1 class="mb-4">Here you will see your bookmarked books (if you have any)</h1>

        {% for book in bookmarkedBooks %}

            {% include 'catalog/catalog_book_box.twig' with {'book': book} %}

        {% else %}

            <div class="col-12 alert alert-info">
                <p class="mb-0">You haven't bookmarked any books yet!</p>
                <a href="/catalog" class="alert-link">Visit the catalog to add some.</a>
            </div>

        {% endfor %}

    </div>

{% endblock %}