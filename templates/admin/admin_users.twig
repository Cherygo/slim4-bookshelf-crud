{% extends 'layouts/layout.twig' %}

{% block content %}

    <div class="container mt-5">
        <div class="text d-flex flex-column align-items-center" style="text-align: center">

            <nav>
                <h1 class="mb-4">User Management</h1>
                <p class="lead text-muted">View all registered users and manage their access roles.</p>
            </nav>

        <a href="/admin" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left me-2"></i> Back to Admin page
        </a>

        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Registered</th>
                            <th scope="col">Role</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.created_at|date("Y-m-d") }}</td>

                                <td>

                                    {% if user.role == 'admin' %}
                                        <span class="badge text-bg-danger">Admin</span>
                                    {% else %}
                                        <span class="badge text-bg-success">User</span>
                                    {% endif %}
                                </td>

                                <td>
                                    <form action="/admin/admin_users/role/{{ user.id }}" method="POST">
                                        <input type="hidden" name="redirect_to" value="/admin/admin_users">

                                        {% if user.role == 'admin' %}
                                            <button type="submit" name="new_role" value="user" class="btn btn-sm btn-outline-success">
                                                Demote to User
                                            </button>
                                        {% else %}
                                            <button type="submit" name="new_role" value="admin" class="btn btn-sm btn-outline-danger">
                                                Promote to Admin
                                            </button>
                                        {% endif %}
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">No registered users found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
{% endblock %}